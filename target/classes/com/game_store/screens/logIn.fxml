<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.game_store.screens.LogInController"
           fx:id="root"
           styleClass="root">
  <children>
    <HBox>
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <VBox styleClass="login-pane">
          <children>
            <Label styleClass="login-title" text="Welcome Back">
              <VBox.margin>
                <Insets bottom="30"/>
              </VBox.margin>
            </Label>
            <TextField fx:id="emailField" promptText="Email Address" styleClass="login-field">
              <VBox.margin>
                <Insets bottom="25"/>
              </VBox.margin>
            </TextField>
            <!-- PasswordField -->
            <StackPane>
              <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-field">
                <VBox.margin>
                  <Insets bottom="25"/>
                </VBox.margin>
              </PasswordField>
              <TextField fx:id="passwordTextField" promptText="Password" styleClass="login-field" visible="false" managed="false">
                <VBox.margin>
                  <Insets bottom="25"/>
                </VBox.margin>
              </TextField>
            </StackPane>
            <!-- بعد PasswordField -->
            <CheckBox fx:id="showPasswordCheckBox" text="Show Password" styleClass="remember-checkbox" style="-fx-padding: 0 350 0 0;">
              <VBox.margin>
                <Insets top="15"/>
              </VBox.margin>
            </CheckBox>
            <HBox alignment="CENTER_LEFT">
              <VBox.margin>
                <Insets bottom="15"/>
              </VBox.margin>
            </HBox>
            <Button fx:id="loginButton" mnemonicParsing="false" styleClass="login-button" text="Log in">

            </Button>
          </children>
        </VBox>
        <HBox alignment="CENTER" style="-fx-padding: 0 230 0 0;" spacing="5">
          <Label text="Don’t have an account?" styleClass="doLabel"/>
          <Button onAction="#goSignUp" mnemonicParsing="false" styleClass="signUp-button" text="Sign up"/>
          <VBox.margin>
            <Insets top="5"/>
          </VBox.margin>
        </HBox>
        <Label fx:id="errorLabel" style="-fx-font-size: 13px; -fx-text-fill: #cf6679;">
          <VBox.margin>
            <Insets top="10"/>
          </VBox.margin>
        </Label>
      </VBox>
      <VBox fx:id="imageContainer" alignment="CENTER" HBox.hgrow="ALWAYS"/>
    </HBox>
  </children>
  <Button text="❬ Back" onAction="#goHome" styleClass="backButton"
                                                  StackPane.alignment="BOTTOM_LEFT" />
</StackPane>
