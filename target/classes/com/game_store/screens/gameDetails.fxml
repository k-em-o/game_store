<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.game_store.screens.GameDetailsController"
            style="-fx-background-color: #0D1B2A;">

    <!-- ===== NAVBAR (زي البراوز بالظبط) ===== -->
    <top>
        <fx:include source="navbar.fxml"/>
    </top>

    <!-- ===== CONTENT ===== -->
    <center>
        <AnchorPane style="-fx-background-color: #0D1B2A;">

            <VBox alignment="CENTER"
                  spacing="25"
                  AnchorPane.topAnchor="30"
                  AnchorPane.bottomAnchor="30"
                  AnchorPane.leftAnchor="30"
                  AnchorPane.rightAnchor="30">

                <!-- ===== Title & Price ===== -->
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="gameTitle"
                           style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Label fx:id="gamePrice"
                           style="-fx-font-size: 20px; -fx-text-fill: #4CAF50;"/>
                </VBox>

                <!-- ===== Image + Buttons ===== -->
                <HBox spacing="40" alignment="CENTER">

                    <ImageView fx:id="gameImage"
                               fitWidth="420"
                               fitHeight="240"
                               preserveRatio="true"
                               style="-fx-effect: dropshadow(gaussian, black, 20, 0.3, 0, 0);"/>

                    <VBox spacing="15" alignment="CENTER_LEFT">

                        <Button fx:id="buyButton"
                                text="BUY NOW"
                                prefWidth="200"
                                style="-fx-background-color: #28a745;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 12;"/>

                        <Button fx:id="addToCartButton"
                                text="ADD TO CART"
                                prefWidth="200"
                                style="-fx-background-color: #007bff;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 12;"/>

                        <Button fx:id="addToWishlistButton"
                                text="WISHLIST"
                                prefWidth="200"
                                style="-fx-background-color: #ffc107;
                                       -fx-text-fill: black;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 12;"/>
                    </VBox>
                </HBox>

                <!-- ===== Description & Review ===== -->
                <HBox spacing="25" alignment="CENTER">

                    <VBox spacing="8">
                        <Label text="Description"
                               style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                        <TextArea fx:id="descriptionArea"
                                  prefWidth="450"
                                  prefHeight="160"
                                  wrapText="true"
                                  editable="false"
                                  style="-fx-control-inner-background: #1B263B;
                                         -fx-text-fill: white;
                                         -fx-background-radius: 10;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Review"
                               style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                        <TextArea fx:id="reviewArea"
                                  prefWidth="300"
                                  prefHeight="160"
                                  wrapText="true"
                                  editable="false"
                                  style="-fx-control-inner-background: #1B263B;
                                         -fx-text-fill: white;
                                         -fx-background-radius: 10;"/>
                    </VBox>

                </HBox>
            </VBox>
        </AnchorPane>
    </center>

</BorderPane>
