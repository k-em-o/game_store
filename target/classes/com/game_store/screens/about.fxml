<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<BorderPane fx:id="root" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game_store.screens.AboutController">
  <top>
    <fx:include source="navbar.fxml"/>
  </top>

  <center>
    <ScrollPane fitToWidth="true" styleClass="main-scroll-pane">
      <content>
        <VBox alignment="TOP_CENTER" spacing="60.0" styleClass="about-container">
          <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
          </padding>
          <HBox alignment="CENTER" spacing="50.0" styleClass="hero-section">
            <children>
              <VBox maxWidth="600.0" spacing="20.0">
                <children>
                  <Label styleClass="section-title" text="ABOUT GAMEVERSE"/>
                  <TextFlow>
                    <Text styleClass="hero-text" text="Welcome to GameVerse, your ultimate destination for everything gaming. We are passionate about bringing the best digital entertainment directly to your screen. From indie gems to AAA blockbusters, we curate a massive library tailored for every type of gamer."/>
                  </TextFlow>
                  <TextFlow>
                    <Text styleClass="hero-text" text="Our mission is simple: To put gamers first. We believe in seamless experiences, instant delivery, and a community where passion for gaming thrives."/>
                  </TextFlow>
                </children>
              </VBox>
              <ImageView fitHeight="350.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
                <image>
                  <Image url="@../assets/About.png"/>
                </image>
              </ImageView>
            </children>
          </HBox>
          <VBox alignment="CENTER" spacing="40.0">
            <children>
              <Label styleClass="section-subtitle" text="WHY CHOOSE US?"/>
              <HBox alignment="CENTER" spacing="30.0">
                <children>
                  <VBox alignment="CENTER" spacing="15.0" styleClass="feature-card">
                    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                      <image>
                        <Image url="@../assets/GamersFirstIMG.png"/>
                      </image>
                    </ImageView>
                    <Label styleClass="feature-title" text="Gamers First"/>
                    <Label styleClass="feature-desc" text="Community-driven support and features tailored for you." wrapText="true"/>
                  </VBox>
                  <VBox alignment="CENTER" spacing="15.0" styleClass="feature-card">
                    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                      <image>
                        <Image url="@../assets/MassiveGameLibraryIMG.png"/>
                      </image>
                    </ImageView>
                    <Label styleClass="feature-title" text="Massive Library"/>
                    <Label styleClass="feature-desc" text="Thousands of titles across all genres ready to download." wrapText="true"/>
                  </VBox>
                  <VBox alignment="CENTER" spacing="15.0" styleClass="feature-card">
                    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                      <image>
                        <Image url="@../assets/ExclusiveDealsIMG.png"/>
                      </image>
                    </ImageView>
                    <Label styleClass="feature-title" text="Exclusive Deals"/>
                    <Label styleClass="feature-desc" text="Unbeatable prices and seasonal discounts just for members." wrapText="true"/>
                  </VBox>
                </children>
              </HBox>
            </children>
          </VBox>
          <VBox alignment="CENTER" spacing="10.0" styleClass="about-footer">
            <Label styleClass="slogan-text" text="LEVEL UP YOUR EXPERIENCE"/>
          </VBox>
        </VBox>
      </content>
    </ScrollPane>
  </center>
</BorderPane>
