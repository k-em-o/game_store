<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>

<AnchorPane fx:id="rootCard"
            prefWidth="325"
            prefHeight="517"
            maxWidth="325"
            maxHeight="517"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.game_store.components.GameCardController"
            style="-fx-background-color: #1e1e1e;
                   -fx-background-radius: 14;
                   -fx-border-radius: 14;
                   -fx-border-color: #2a2a2a;
                   -fx-cursor: hand;">

    <VBox spacing="12"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- صورة اللعبة -->
        <ImageView fx:id="gameImage"
                   fitWidth="325"
                   fitHeight="380"
                   preserveRatio="false"
                   smooth="true"
                   style="-fx-background-radius: 14 14 0 0;" />

        <!-- اسم اللعبة -->
        <Label fx:id="gameName"
               wrapText="true"
               style="-fx-text-fill: white;
                      -fx-font-size: 18px;
                      -fx-font-weight: bold;
                      -fx-padding: 0 12 0 12;" />

        <!-- السعر -->
        <Label fx:id="gamePrice"
               style="-fx-text-fill: #4CAF50;
                      -fx-font-size: 17px;
                      -fx-font-weight: bold;
                      -fx-padding: 0 12 12 12;" />

    </VBox>
</AnchorPane>
