<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.game_store.screens.GameDetailsController"
            fx:id="root">

    <!-- ================= TOP (NAVBAR) ================= -->
 <top>
    <fx:include source="navbar.fxml"/>
  </top>

    <!-- ================= CENTER (CONTENT) ================= -->
    <center>
        <VBox spacing="25">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <!-- Title & Price -->
            <VBox spacing="8">
                <Label fx:id="gameTitle"
                       style="-fx-font-size: 28px; -fx-text-fill: white;"/>

                <Label fx:id="gamePrice"
                       style="-fx-font-size: 20px; -fx-text-fill: #FFD700;"/>
            </VBox>

            <!-- Image + Buttons -->
            <HBox spacing="30" alignment="TOP_LEFT">

                <ImageView fx:id="gameImage"
                           fitWidth="420"
                           fitHeight="260"
                           preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);"/>

                <VBox spacing="20" alignment="TOP_CENTER">
                    <Button fx:id="buyButton" text="Buy Now" prefWidth="140" prefHeight="42"
                            onMouseEntered="#hoverButton" onMouseExited="#exitButton"
                            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>

                    <Button fx:id="addToCartButton" text="Add to Cart" prefWidth="140" prefHeight="42"
                            onMouseEntered="#hoverButton" onMouseExited="#exitButton"
                            style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>

                    <Button fx:id="addToWishlistButton" text="Add to Wishlist" prefWidth="160" prefHeight="42"
                            onMouseEntered="#hoverButton" onMouseExited="#exitButton"
                            style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <!-- Description & Review -->
            <HBox spacing="25">

                <TextArea fx:id="descriptionArea"
                          prefWidth="400"
                          prefHeight="160"
                          wrapText="true"
                          editable="false"
                          style="-fx-control-inner-background: #1B263B; -fx-text-fill: white;"/>

                <TextArea fx:id="reviewArea"
                          prefWidth="400"
                          prefHeight="160"
                          wrapText="true"
                          editable="false"
                          style="-fx-control-inner-background: #1B263B; -fx-text-fill: white;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
