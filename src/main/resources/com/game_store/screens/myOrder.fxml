<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.game_store.screens.MyOrderController"
      styleClass="root">
  <top>
    <fx:include source="navbar.fxml"/>
  </top>

  <center>
    <HBox spacing="30">
      <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
      </padding>
      <!-- LEFT MENU -->
      <VBox spacing="15" styleClass="profile-menu" VBox.vgrow="ALWAYS">
        <Button text="Personal Information" styleClass="menu-btn" onAction="#goProfile">
          <padding>
            <Insets top="0" right="0" bottom="0" left="0"/>
          </padding>
        </Button>
        <Label text="Modify Your Personal Information" styleClass="menu-hint"/>
        <Label text="My Orders" styleClass="menu-title"/>
        <Label text="View Your Previous Orders" styleClass="menu-sub"/>
        <Separator/>
        <Button text="Wishlist" styleClass="menu-btn" onAction="#goWishlist">
          <padding>
            <Insets top="0" right="0" bottom="0" left="0"/>
          </padding>
        </Button>
        <Label text="View Games You Added in Wishlist" styleClass="menu-hint"/>
        <Button text="Payment Methods" styleClass="menu-btn" onAction="#goPayments">
          <padding>
            <Insets top="0" right="0" bottom="0" left="0"/>
          </padding>
        </Button>
        <Label text="Adjust Your Payment Method" styleClass="menu-hint"/>
      </VBox>
      <!-- RIGHT CARD -->
      <VBox spacing="20" styleClass="profile-card" HBox.hgrow="ALWAYS">
      
      
      </VBox>
    </HBox>
  </center>
</BorderPane>
